<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/backgroundColor">

    <!-- 카드 형태의 배경 레이아웃 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_card_background"
        android:padding="24dp"
        android:gravity="center">


        <TextView
            android:id="@+id/tvResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인식 결과"
            android:textColor="@color/mainColor"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/tvRecognitionResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#717070"
        android:textSize="35sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"/>

    <android.widget.Button
        android:id="@+id/btnConfirm"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:background="@drawable/button_rounded_corner_rectangle"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp" />

    <android.widget.Button
        android:id="@+id/btnRetake"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="재촬영"
        android:background="@drawable/button_rounded_corner_rectangle_gray"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인식결과가 다르다면 재촬영을 해주세요"
        android:textColor="#717070"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:gravity="center" />
    </LinearLayout>
</LinearLayout>




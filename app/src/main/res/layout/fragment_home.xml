<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/backgroundColor"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backgroundColor">

        <!-- 프로필 섹션 -->
        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:elevation="8dp"
            android:background="@drawable/rounded_view"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:src="@drawable/profile"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/nickname_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="#717070"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:id="@+id/points_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999,999,999P"
                    android:textColor="#717070"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 재활용 횟수 섹션 -->
        <LinearLayout
            android:id="@+id/recycle_section"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:elevation="8dp"
            android:background="@drawable/rounded_view"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재활용 횟수"
                android:textColor="#717070"
                android:textSize="13sp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp" />

            <!-- 수평선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D4D4D4"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp" />

            <!-- 재활용 아이템 배치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- 플라스틱 항목 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/plastic_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="플라스틱"
                        android:textColor="#717070"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:id="@+id/plastic_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 수직 구분선 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D4D4D4"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="-10dp" />

                <!-- 종이 항목 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/paper_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종이"
                        android:textColor="#717070"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:id="@+id/paper_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 수직 구분선 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D4D4D4"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="-10dp" />

                <!-- 캔 항목 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/can_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="캔"
                        android:textColor="#717070"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:id="@+id/can_count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 이용내역 섹션 -->
        <LinearLayout
            android:id="@+id/usage_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:elevation="8dp"
            android:background="@drawable/rounded_view"
            android:orientation="vertical">

            <!-- 제목과 아이콘 배치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이용내역"
                    android:textColor="#717070"
                    android:textSize="13sp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <ImageView
                    android:id="@+id/usage_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/home_item" />
            </LinearLayout>

            <!-- 수평선 추가 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D4D4D4"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- RecyclerView 추가 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_logs_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_view"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- 이미지 -->
    <ImageView
        android:id="@+id/donationImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/donation1" />

    <!-- 텍스트와 버튼 영역 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/donationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지찬핑 돕기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- 설명 -->
        <TextView
            android:id="@+id/donationDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀장님 지찬핑을 도와주세요!"
            android:textSize="14sp"
            android:textColor="#717070"
            android:layout_marginTop="4dp" />

        <!-- 기부 버튼 -->
        <android.widget.Button
            android:id="@+id/donateButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="기부하기"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded_corner_rectangle" />
    </LinearLayout>
</LinearLayout>
